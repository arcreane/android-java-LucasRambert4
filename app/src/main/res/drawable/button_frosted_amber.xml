<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid dark grey background (adjust opacity with CC for frosted effect) -->
    <solid android:color="#CC424242" /> <!-- Semi-transparent dark grey -->
    <corners android:radius="28dp" /> <!-- Rounded corners -->
    <!-- Border: Light grey (or remove if no border is needed) -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" /> <!-- Light grey border -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp"/>
</shape>